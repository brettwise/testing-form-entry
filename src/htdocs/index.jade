        }
        function incrementCounter() {
            var emailCount = new Firebase("https://testing-form-entry.firebaseio.com/emails/count");
            emailCount.transaction(function (current_value) {
                return current_value+1;
                });
        }
        particlesJS('particles-js', {
          particles: {
